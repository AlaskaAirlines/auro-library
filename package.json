{
  "name": "@aurodesignsystem/auro-library",
  "version": "5.5.6",
  "description": "This repository holds shared scripts, utilities, and workflows utilized across repositories along the Auro Design System.",
  "repository": {
    "type": "git",
    "url": "https://github.com/AlaskaAirlines/auro-library.git"
  },
  "main": "index.js",
  "license": "Apache-2.0",
  "engines": {
    "node": "^20.x || ^22.x"
  },
  "bin": {
    "generateDocs": "./bin/generateDocs.mjs"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.11",
    "handlebars": "^4.7.8",
    "markdown-magic": "^2.6.1"
  },
  "devDependencies": {
    "@aurodesignsystem/auro-cli": "^3.5.1",
    "@aurodesignsystem/auro-config": "^1.3.1",
    "@commitlint/cli": "^18.5.0",
    "@commitlint/config-conventional": "^18.5.0",
    "@open-wc/testing": "^4.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^11.0.2",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^23.0.0",
    "sinon": "^20.0.0",
    "vitest": "^2.1.2"
  },
  "release": {
    "branches": [
      {
        "name": "main"
      },
      {
        "name": "beta",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "./CHANGELOG.md",
          "changelogTitle": "# Semantic Release Automated Changelog"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "./package.json",
            "./CHANGELOG.md",
            "./README.md",
            "./docs/api.md"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "biome check --no-errors-on-unmatched",
    "lint:fix": "biome check --fix --no-errors-on-unmatched",
    "build:docs": "node scripts/build/generateReadme.mjs",
    "test:vitest": "vitest  --run",
    "test:vitest:watch": "vitest",
    "test:auro": "auro test --files 'scripts/**/*.test.js'",
    "test:auro:watch": "auro test --watch --files 'scripts/**/*.test.js'",
    "test": "npm-run-all test:vitest test:auro",
    "test:watch": "npm-run-all test:vitest:watch test:auro:watch"
  },
  "bugs": {
    "url": "https://github.com/AlaskaAirlines/auro-library/issues"
  }
}
